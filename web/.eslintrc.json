{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "globals": {
        "webglUtils": true,
        "mat4": true,
        "document": true,
        "window": true,
        "navigator": true,
        "mat3": true,
        "location": true,
        "alert": true,
        "Image": true,
        "isNaN": true
    },
    "rules": {
        "indent": [2, 4],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "react/prop-types": [0],
        "react/jsx-no-bind": [0],
        "no-param-reassign": [0],
        "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx"] }],
        "import/prefer-default-export": [0],
        "no-shadow": [0],
        "arrow-body-style": [0],
        "jsx-a11y/interactive-supports-focus": [0],
        "max-len": [1, 140],
        "class-methods-use-this": [0],
        "no-unused-vars": [0],
        "no-underscore-dangle": [0]
    }
}
